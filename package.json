{
	"name": "shopify-codegen",
	"version": "0.1.0",
	"description": "Various Shopify codegen tools",
	"type": "module",
	"files": [
		"dist",
		"bin"
	],
	"scripts": {
		"build": "zshy",
		"fix": "biome check --fix --unsafe .",
		"lint": "biome check .",
		"lint:tsc": "tsc --noEmit",
		"format": "biome format --write ."
	},
	"zshy": {
		"exports": "./src/index.ts",
		"bin": "./src/cli.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@types/node": "^22.10.0",
		"semantic-release": "^25.0.2",
		"typescript": "^5.7.2",
		"zshy": "^0.7.0"
	},
	"packageManager": "yarn@4.12.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/hyldmo/shopify-codegen.git"
	},
	"license": "MIT",
	"keywords": [
		"shopify",
		"liquid",
		"typescript",
		"codegen",
		"schema"
	]
}
